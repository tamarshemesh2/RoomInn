<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ScanUnityHandler">

    <Button
        android:id="@+id/startUnityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/dosis_medium"
        android:text="i'm ready!"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instructions" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/lobster"
        android:text="scan your room:"
        android:textColor="@color/dark_purple"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/room_scan_gif2"
        app:layout_constraintBottom_toTopOf="@id/instructions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="
        1. move phone around the room\n
           to detect floor plane\n\n
        2. tap to place markers\n\n
        3. tap a marker and drag to move\n\n
        4. tap undo to erase most recent marker\n\n
        5. tap done when done measuring room"
        android:fontFamily="@font/dosis_medium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/gif"
        app:layout_constraintTop_toBottomOf="@id/gif"
        app:layout_constraintEnd_toEndOf="@id/gif"
        app:layout_constraintBottom_toTopOf="@id/startUnityButton"
        android:textColor="@color/black"
        android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>